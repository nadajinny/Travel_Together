<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Trip.TripDetailActivity"
    android:padding="16dp">
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:text="뒤로가기"

        android:textSize="10sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/viewPlansButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="여행 계획 보기"

        android:backgroundTint="@color/white"
        android:textColor="@color/clear_sky"/>

    <Button
        android:id="@+id/viewPrepareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="준비물 보기"

        android:backgroundTint="@color/white"
        android:textColor="@color/clear_sky"/>

    <Button
        android:id="@+id/viewBudgetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="예산 보기"

        android:backgroundTint="@color/white"
        android:textColor="@color/clear_sky"
        />

</LinearLayout>

    <!-- 자식 Fragment가 표시될 Container -->
    <FrameLayout
        android:id="@+id/childFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
